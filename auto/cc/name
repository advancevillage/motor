feature="C compiler"
feature_name=
feature_run=yes
feature_incs=
feature_path=
feature_libs=
feature_test=
. auto/feature

if [ $found = no ]; then
    echo
    echo $0: error: C compiler $CC is not found
    echo
    exit 1
fi

if `$CC -v 2>&1 | grep 'gcc version' >/dev/null 2>&1`; then
    CC_NAME=gcc
    echo " + using GNU C compiler"
elif `$CC -v 2>&1 | grep '\(clang\|LLVM\) version' >/dev/null 2>&1`; then
    CC_NAME=clang
    echo " + using Clang C compiler"
else
    CC_NAME=unknown
fi
