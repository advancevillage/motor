MAKEFILE=$OBJS/Makefile

AUTO_HEADERS_H=$OBJS/${PROJECT}_auto_headers.h
AUTO_CONFIG_H=$OBJS/${PROJECT}_auto_config.h
AUTOCONF_ERR=$OBJS/autoconf.err
AUTOTEST=$OBJS/autotest

tab='	'
space=' '

# check the echo's "-n" option and "\c" capability
if echo "test\c" | grep c >/dev/null; then
    if echo -n test | grep n >/dev/null; then
        echo_n=
        echo_c=
    else
        echo_n=-n
        echo_c=
    fi
else
    echo_n=
    echo_c='\c'
fi

#create Makefile
cat << EOF > Makefile

default: build

clean:
${tab}rm -rf Makefile $OBJS
EOF
